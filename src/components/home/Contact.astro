---
import { LuArrowUpRight } from "react-icons/lu";
---

<section id="contact" class="section-shell section-grid">
  <h2 data-animate class="hidden md:block md:col-start-1 md:col-end-2">[05]</h2>
  <h1
    data-animate
    class="display-hero md:col-start-2 md:col-end-11 md:mb-32 md:text-right"
  >
    Find me here
  </h1>
  <div
    data-animate-group
    data-animate-offset="8"
    data-animate-start="top 92%"
    class="md:col-start-6 md:col-end-11 grid grid-cols-1 gap-6 md:grid-cols-2 md:gap-x-10"
  >
    <div class="flex flex-col gap-2">
      <a
        data-animate-item
        class="h2 uppercase transition-colors transition-transform hover:translate-x-2 hover:text-accent"
        href="https://github.com/tristan-kennedy"
        target="_blank"
        rel="noreferrer"
      >
        GitHub <LuArrowUpRight className="inline align-middle" />
      </a>
      <a
        data-animate-item
        class="h2 uppercase transition-colors transition-transform hover:translate-x-2 hover:text-accent"
        href="https://www.linkedin.com/in/tristandkennedy/"
        target="_blank"
        rel="noreferrer"
      >
        LinkedIn <LuArrowUpRight className="inline align-middle" />
      </a>
      <a
        data-animate-item
        class="h2 uppercase transition-colors transition-transform hover:translate-x-2 hover:text-accent"
        href="https://letterboxd.com/tdouglaskennedy/"
        target="_blank"
        rel="noreferrer"
      >
        Letterboxd <LuArrowUpRight className="inline align-middle" />
      </a>
    </div>
    <div class="flex flex-col gap-2">
      <a
        data-animate-item
        class="h2 uppercase transition-colors transition-transform hover:translate-x-2 hover:text-accent"
        href="/resume.pdf"
        target="_blank"
        rel="noreferrer"
      >
        Resume <LuArrowUpRight className="inline align-middle" />
      </a>
      <a
        data-animate-item
        class="h2 uppercase transition-colors transition-transform hover:translate-x-2 hover:text-accent"
        href="mailto:tdouglaskennedy@gmail.com"
        target="_blank"
        rel="noreferrer"
      >
        Email <LuArrowUpRight className="inline align-middle" />
      </a>
    </div>
  </div>
</section>

