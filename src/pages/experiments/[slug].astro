---
import Layout from "../../layouts/Layout.astro";
import Menu from "../../components/menu/Menu";
import { Image } from "astro:assets";
import { getExperiments } from "../../lib/content/experiments";

export async function getStaticPaths() {
  const experiments = await getExperiments();
  return experiments.map((experiment) => ({
    params: { slug: experiment.slug },
    props: { experiment },
  }));
}

const { experiment } = Astro.props;
const { Content } = await experiment.render();
---

<Layout title={experiment.data.title}>
  <section class="section-grid mb-16 py-8">
    <div
      class="mb-6 flex flex-col gap-4 md:col-span-full md:flex-row md:items-center md:justify-between"
    >
      <a
        class="h2 transition-colors transition-transform hover:-translate-x-2 hover:text-accent"
        href="/experiments">‚Üê EXPERIMENTS</a
      >
      <header class="flex items-center justify-end">
        <Menu client:load />
      </header>
    </div>
    <div
      class="grid grid-cols-1 gap-8 md:col-span-full md:grid-cols-10 md:gap-x-6"
    >
      <h1 class="display-xl md:col-start-1 md:col-end-7">
        {experiment.data.title}
      </h1>
      <div
        class="flex flex-col gap-y-4 md:col-start-8 md:col-end-11 md:items-end md:text-right"
      >
        <div>
          <h2>DATE</h2>
          <p>{experiment.data.date}</p>
        </div>
        {
          experiment.data.tech && (
            <div>
              <h2>TECH</h2>
              <p>{experiment.data.tech.join(" / ")}</p>
            </div>
          )
        }
      </div>
      <div class="mt-6 overflow-hidden md:col-span-full md:mt-10">
        <Image
          src={experiment.data.image}
          alt={`${experiment.data.title} cover`}
          class="h-full w-full object-cover"
        />
      </div>
      <div
        class="mt-6 grid grid-cols-1 gap-4 md:col-span-full md:mt-10 md:grid-cols-10 md:gap-x-6"
      >
        <h2 class="md:col-start-1 md:col-end-3">DESCRIPTION</h2>
        <p class="md:col-start-7 md:col-end-11">
          {experiment.data.description}
        </p>
      </div>
    </div>
  </section>
  <article class="mdx pb-16 md:pb-24">
    <Content />
  </article>
</Layout>
