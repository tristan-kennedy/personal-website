---
import Layout from "../../layouts/Layout.astro";
import { getPosts } from "../../lib/content/posts";

const posts = await getPosts();
---

<Layout title="Tristan Kennedy | Posts">
  <section class="mx-auto max-w-5xl py-16">
    <p class="text-muted mb-2 text-sm tracking-[0.2em]">POSTS</p>
    <h1 class="mb-8 text-4xl font-semibold">Latest Thoughts</h1>
    <div class="grid gap-12 md:grid-cols-2">
      {
        posts.map((post) => (
          <a
            href={post.url}
            class="group border-muted/30 hover:bg-muted/10 rounded-2xl border p-6 transition hover:-translate-y-1 hover:border-accent/60"
          >
            <div class="flex items-center justify-between gap-4">
              <h3 class="text-xl font-semibold">{post.data.title}</h3>
              <span class="text-muted text-xs tracking-[0.2em] uppercase">
                {post.data.date}
              </span>
            </div>
            <p class="text-muted mt-3">{post.data.description}</p>
            <p class="mt-6 text-sm font-semibold text-accent">Read article â†’</p>
          </a>
        ))
      }
    </div>
  </section>
</Layout>
