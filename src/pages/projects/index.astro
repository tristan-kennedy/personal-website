---
import Layout from "../../layouts/Layout.astro";
import Menu from "../../components/menu/Menu";
import { getProjects } from "../../lib/content/projects";

const projects = await getProjects();
---

<Layout title="Tristan Kennedy | Projects">
  <section class="mb-48 grid grid-cols-10 gap-x-6 py-8">
    <h1 class="col-start-1 col-end-5 mb-6 text-7xl">Projects</h1>
    <header class="col-start-10 col-end-11 mb-6 flex items-center justify-end">
      <Menu client:only />
    </header>
    <h2 class="col-span-full mb-32">STUFF I'VE MADE</h2>
    <div class="col-start-2 col-end-11 grid grid-cols-1 gap-12">
      {
        projects.map((project, index) => (
          <a href={project.url} class="group grid grid-cols-10 gap-x-6 gap-y-2">
            <h2 class="col-start-1 col-end-2">
              [{String(index + 1).padStart(2, "0")}]
            </h2>
            <h3 class="col-start-2 col-end-9 transition-colors group-hover:text-accent">
              {project.data.title}
            </h3>
            <h2 class="col-start-9 col-end-11 text-right">
              {project.data.date}
            </h2>
            <p class="col-start-2 col-end-9">{project.data.description}</p>
            <h2 class="col-start-2 col-end-9 uppercase">
              {project.data.tech.join(" / ")}
            </h2>
            <h2 class="col-start-9 col-end-11 text-right transition-colors transition-transform group-hover:translate-x-2 group-hover:text-accent">
              VIEW DETAILS →
            </h2>
          </a>
        ))
      }
    </div>
  </section>
</Layout>
