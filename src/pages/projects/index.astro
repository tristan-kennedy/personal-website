---
import Layout from "../../layouts/Layout.astro";
import Menu from "../../components/menu/Menu";
import { getProjects } from "../../lib/content/projects";

const projects = await getProjects();
---

<Layout title="Tristan Kennedy | Projects">
  <section class="section-shell section-grid py-8">
    <div class="flex items-start justify-between md:col-span-full">
      <h1 class="display-xl">Projects</h1>
      <header class="flex items-center justify-end">
        <Menu client:load />
      </header>
    </div>
    <h2 class="hidden md:block md:col-span-full md:mb-32">STUFF I'VE MADE</h2>
    <div class="md:col-start-2 md:col-end-11 grid grid-cols-1 gap-10 md:gap-12">
      {
        projects.map((project, index) => (
          <a
            href={project.url}
            class="group grid grid-cols-1 gap-2 md:grid-cols-10 md:gap-x-6"
          >
            <h2 class="hidden md:block md:col-start-1 md:col-end-2">
              [{String(index + 1).padStart(2, "0")}]
            </h2>
            <h3 class="md:col-start-2 md:col-end-9 transition-colors group-hover:text-accent">
              {project.data.title}
            </h3>
            <h2 class="md:col-start-9 md:col-end-11 md:text-right uppercase">
              {project.data.date}
            </h2>
            <p class="md:col-start-2 md:col-end-9">
              {project.data.description.split(".")[0]}...
            </p>
            <h2 class="md:col-start-2 md:col-end-9 uppercase">
              {project.data.tech.join(" / ")}
            </h2>
            <h2 class="hidden md:block md:col-start-9 md:col-end-11 md:text-right transition-colors transition-transform group-hover:translate-x-2 group-hover:text-accent">
              â†’
            </h2>
          </a>
        ))
      }
    </div>
  </section>
</Layout>
