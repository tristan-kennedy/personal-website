---
import Layout from "../layouts/Layout.astro";
import BentoBox from "../components/BentoBox.astro";
---

<Layout title="Tristan Kennedy">
  <nav class="flex-1">
    <div class="grid h-full grid-cols-8 grid-rows-6 gap-8">
      <div class="col-span-4 row-span-3">
        <BentoBox>
          <h1 class="text-9xl font-bold">HI!</h1>
          <h2 class="text-5xl">IM TRISTAN KENNEDY</h2>
        </BentoBox>
      </div>
      <a
        class="col-span-2 row-span-4"
        href="/projects"
        transition:name="projects"
      >
        <BentoBox><h1>PROJECTS</h1></BentoBox>
      </a>
      <a class="col-span-2 row-span-2" href="/blog" transition:name="blog"
        ><BentoBox><h1>BLOG</h1></BentoBox></a
      >

      <a class="col-span-2 row-span-2" href="/about" transition:name="about-me"
        ><BentoBox><h1>ABOUT ME</h1></BentoBox></a
      >
      <div class="col-span-4 row-span-1">
        <BentoBox><h1>PROJECTS</h1></BentoBox>
      </div>
      <a
        class="col-span-3 row-span-2"
        href="/experiments"
        transition:name="experiments"
      >
        <BentoBox><h1>EXPERIMENTS</h1></BentoBox>
      </a>
      <a
        class="col-span-5 row-span-2"
        href="/contact"
        transition:name="contact-me"
      >
        <BentoBox><h1>CONTACT ME</h1></BentoBox>
      </a>
    </div>
  </nav>
</Layout>
