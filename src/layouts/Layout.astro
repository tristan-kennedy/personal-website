---
import Navigation from "../components/Navigation.astro";
import Head from "../components/Head.astro";
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <Head title={title} />
  <body
    class="mx-auto flex h-screen max-w-[1440px] flex-col gap-8 bg-bg py-8 font-fira-code text-fg transition-colors"
  >
    <Navigation />
    <main class="flex flex-1">
      <slot />
    </main>
  </body>
</html>
